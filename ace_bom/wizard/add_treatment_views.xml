<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_bom_add_treatment_view_form" model="ir.ui.view">
        <field name="name">mrp.bom.add.treatment.view.form</field>
        <field name="model">mrp.bom.add.treatment</field>
        <field name="arch" type="xml">
            <form string="Add Glue/Coating Component" create="0" edit="0">
                <sheet>
                    <group>
                        <field name="product_uom_category_id" invisible="1"/>
                        <field name="is_coating_component" invisible="1"/>
                        <field name="bom_id" invisible="1"/>
                        <field name="allowed_product_category_ids" invisible="1"/>
                        <field name="product_uom_id" invisible="1"/>
                        <group string="Component">
                            <field name="product_id" domain="[('categ_id', 'in', allowed_product_category_ids)]"/>
                            <label for="product_qty" string="Quantity"/>
                            <div class="o_row">
                                <field name="product_qty"/>
                                <field name="product_uom_name"/>
                            </div>
                            <label for="grammage" string="Grammage"/>
                            <div class="o_row">
                                <field name="grammage"/>
                                <field name="grammage_uom_name"/>
                            </div>
                        </group>
                        <group string="Factors">
                            <field name="film_component_to_coat" domain="[('is_film_component', '=', True), ('bom_id', '=', bom_id)]" attrs="{'invisible': [('is_coating_component', '!=', True)]}"/>
                            <field name="coverage_factor" string="Coverage(%)" widget="percentage"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Add" name="button_add_treatment" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="add_treatment_action_form_view" model="ir.actions.act_window">
        <field name="name">Add Glue/Coating Component</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.bom.add.treatment</field>
        <field name="view_id" ref="ace_bom.mrp_bom_add_treatment_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>