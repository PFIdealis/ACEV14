<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_bom_add_film_view_form" model="ir.ui.view">
        <field name="name">mrp.bom.add.film.view.form</field>
        <field name="model">mrp.bom.add.film</field>
        <field name="arch" type="xml">
            <form string="Add Film Component" create="0" edit="0">
                <sheet>
                    <group>
                        <group string="Component">
                            <field name="bom_id" invisible="1"/>
                            <field name="product_uom_id" invisible="1"/>
                            <field name="product_uom_category_id" invisible="1"/>
                            <field name="allowed_product_category_ids" invisible="1"/>
                            <field name="product_id" domain="[('categ_id', 'in', allowed_product_category_ids)]"/>
                            <label for="product_qty" string="Quantity"/>
                            <div class="o_row">
                                <field name="product_qty"/>
                                <field name="proxy_product_uom_id" options="{'no_open':True,'no_create':True}" groups="uom.group_uom"/>
                            </div>
                            <label for="grammage"/>
                            <div class="o_row">
                                <field name="grammage"/>
                                <field name="grammage_uom_name"/>
                            </div>
                        </group>
                        <group string="Factors">
                            <field name="coverage_factor" string="Coverage(%)"/>
                            <field name="stretching_factor" string="Stretching(%)"/>
                            <label for="border_factor" string="Border(%)"/>
                            <div class="o_row">
                                <field name="border_factor" attrs="{'invisible': [('is_manual_border_factor', '=', True)]}"/>
                                <field name="manual_border_factor" attrs="{'invisible': [('is_manual_border_factor', '=', False)]}"/>
                                <field name="is_manual_border_factor" style="margin-left: 20px;"/><span>User Defined</span>
                            </div>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Add" name="button_add_film" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="add_film_action_form_view" model="ir.actions.act_window">
        <field name="name">Add Film Component</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.bom.add.film</field>
        <field name="view_id" ref="ace_bom.mrp_bom_add_film_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>