<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_bom_import_recipe_view_form" model="ir.ui.view">
        <field name="name">mrp.bom.import.recipe.view.form</field>
        <field name="model">mrp.bom.import.recipe</field>
        <field name="arch" type="xml">
            <form string="Import Recipe">
                <separator string="Select a Recipe"/>
                <p>Pay attention that this action will erase components and by-products of any previously imported recipe.</p>
                <group>
                    <field name="bom_id" invisible="1"/>
                    <field name="allowed_waste_category_ids" invisible="1"/>
                    <field name="allowed_waste_uom_ids" invisible="1"/>
                    <field name="recipe_bom_id"/>
                    <field name="by_product_id" domain="[('categ_id', 'in', allowed_waste_category_ids), ('uom_id', 'in', allowed_waste_uom_ids)]"/>
                </group>
                <footer>
                    <button string="Import" name="button_import_recipe" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
