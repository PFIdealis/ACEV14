<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="mrp_bom_line_view_form" model="ir.ui.view">
        <field name="name">mrp.bom.line.view.form.inherited.film.production</field>
        <field name="model">mrp.bom.line</field>
        <field name="inherit_id" ref="mrp.mrp_bom_line_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']/.." position="inside">
                <field name="is_film_component" invisible="1"/>
                <field name="film_type_bom" invisible="1"/>
                <field name="is_coating_component" invisible="1"/>
                <field name="is_glue_component" invisible="1"/>
                <label for="grammage" attrs="{'invisible': ['|', ('film_type_bom', 'not in', ['glued', 'laminated']), ('is_film_component', '!=', True)]}"/>
                <div class="o_row" attrs="{'invisible': ['|', ('film_type_bom', 'not in', ['glued', 'laminated']), ('is_film_component', '!=', True)]}">
                    <field name="grammage"/>
                    <field name="grammage_uom_name"/>
                </div>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <group>
                    <group string="Factors" attrs="{'invisible': [('film_type_bom', 'not in', ['extruded', 'glued', 'laminated'])]}">
                        <field name="related_concentration" string="Concentration(%)" attrs="{'invisible': [('film_type_bom', 'not in', ['extruded', 'laminated'])]}"/>
                        <field name="film_component_to_treat" attrs="{'invisible': [('is_coating_component', '=', False), ('is_glue_component', '=', False)]}" readonly="1"/>
                        <field name="coverage_factor" string="Coverage(%)" widget="percentage" attrs="{'invisible': [('film_type_bom', 'not in', ['glued', 'laminated'])]}"/>
                        <field name="stretching_factor" string="Stretching(%)" widget="percentage" attrs="{'invisible': ['|', ('film_type_bom', 'not in', ['glued', 'laminated']), ('is_film_component', '!=', True)]}"/>
                        <field name="border_factor" string="Border(%)" widget="percentage" attrs="{'invisible': ['|', ('film_type_bom', 'not in', ['glued', 'laminated']), ('is_film_component', '!=', True)]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>